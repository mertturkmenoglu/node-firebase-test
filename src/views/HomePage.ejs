<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

  <title>
    <%= pageTitle %>
  </title>
</head>

<body>
  <%- include('./includes/Navbar.ejs') %>
    <div class="container">
      <div class="mt-4 display-5 lead  text-center">Node Firebase Test</div>
      <form method="post" action="/create-post">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" class="form-control" id="username" aria-describedby="usernameHelp">
          <div id="usernameHelp" class="form-text">Posted by</div>
        </div>
        <div class="mb-3">
          <label for="postContent" class="form-label">Post Content</label>
          <input type="text" name="postContent" class="form-control" id="postContent" aria-describedby="postContentHelp">
          <div id="postContentHelp" class="form-text">Content</div>
        </div>
        <div class="d-grid gap-2">
          <button id="createPostButton" type="submit" class="btn btn-primary block">Post</button>
        </div>
      </form>
      <div class="mt-4">
        <pre>
          <%= JSON.stringify(posts) %>
        </pre>
      </div>
    </div>
</body>

</html>